{
    "navigation" : {
        "loginButton" : "a[href='/login']",
        "logoutButton" : ".ml-auto > :nth-child(3) > .nav-link",
        "registerButton" : "a[href='/register']",
        "createGallery" : "a[href='/create']"

    },

    "loginPage" : {
        "email" : "input[id='email']",
        "password" : "input[id='password']",
        "submitBtn" : "button[type='submit']"
    },

    "registerPage" : {
        "h1Header" : "h1",
        "firstName" : "input[id='first-name']",
        "lastName" : "input[id='last-name']",
        "email" : "input[id='email']",
        "password" : "input[id='password']",
        "rePassword" : "input[id='password-confirmation']",
        "terms" : "input[class='form-check-input']",
        "submit" : "button[type='submit']",
        "emailValidationError" : ":nth-child(3) > .alert",
        "passwordValidationError" : "div:nth-of-type(4) > .alert.alert-danger",
        "termsValidationError" : "div:nth-of-type(6) > .alert.alert-danger"

    },

    "createGalleryPage" : {
        "title" : "input[id='title']",
        "description" : "input[id='description']",
        "imageUrl" : ".input-group.mb-3 > .form-control",
        "submit" : "form > button:nth-of-type(1)"
    }
}